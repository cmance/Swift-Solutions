@{
    ViewData["Title"] = "Home";
}

<section class="wp">
    <div class="container-fluid mt-5 d-flex align-items-center">
        <div class="container mt-5 p-5">
            <div class="row">
                <!-- Text on the left -->
                <div class="col-md-6 col-lg-5 text-center text-lg-start">
                    <h1 class="display-2 fw-bolder text-light mb-0">Discover.</h1>
                    <h1 class="display-2 fw-bolder text-light">Swipe.</h1>
                    <h1 class="display-2 fw-bolder text-light">Experience.</h1>
                    <div class="text-find text-light">
                        Find your scene with a <span class="text-swipe">SWIPE</span>
                    </div>
                    <div class="button-container mt-3 mb-5">
                        <a asp-action="Explore" type="button" class="event-button">Find Events</a>
                    </div>
                </div>

                <!-- Image on the right, with an extra class to add negative margin -->
                <div class="col-md-6 col-lg-7">
                    <div class="image-container text-center push-left">
                        <img src="~/media/images/3.png" class="img-fluid" alt="PopNGo Logo">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>