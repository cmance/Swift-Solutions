@page
@model NotificationsModel
@{
    ViewData["Title"] = "Notifications";
    ViewData["ActivePage"] = ManageNavPages.Notifications;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="NotificationEmail" class="form-control" placeholder="" disabled />
                <label asp-for="NotificationEmail" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NotificationEmail" class="form-control base-identity-form"
                    placeholder="Please enter your notification email." />
                <label asp-for="Input.NotificationEmail" class="form-label"></label>
                <span asp-validation-for="Input.NotificationEmail" class="text-danger"></span>
            </div>
            <div class="row mx-1 justify-content-center">
                <div class="col-md-6">
                    <div class="form-floating text-center">
                        <select asp-for="Input.ItineraryReminderTime" class="form-select base-identity-form">
                            <option value="quarter-hour">15 minutes</option>
                            <option value="half-hour">30 minutes</option>
                            <option value="hour">1 hour</option>
                            <option value="two-hours">2 hours</option>
                            <option value="three-hours">3 hours</option>
                            <option value="six-hours">6 hours</option>
                            <option value="one-day">1 day</option>
                        </select>
                        <label asp-for="Input.ItineraryReminderTime" class="form-label"></label>
                        <span asp-validation-for="Input.ItineraryReminderTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <h3 class="text-light text-muted" style="text-align: center;">Notifications</h3>
            <div class="row mx-1 justify-content-center">
                <div class="col-md-6">
                    <div class="form-check mb-3 text-center">
                        <input asp-for="Input.WeekBefore" class="form-check-input login-checkbox-identity" />
                        <label class="form-check text-swipe" asp-for="Input.WeekBefore"></label>
                    </div>
                    <div class="form-check mb-3 text-center">
                        <input asp-for="Input.DayBefore" class="form-check-input login-checkbox-identity" />
                        <label class="form-check text-swipe" asp-for="Input.DayBefore"></label>
                    </div>
                    <div class="form-check mb-3 text-center">
                        <input asp-for="Input.DayOf" class="form-check-input login-checkbox-identity" />
                        <label class="form-check text-swipe" asp-for="Input.DayOf"></label>
                    </div>
                </div>
            </div>
            <button id="update-notifications-button" type="submit"
                class="w-100 btn btn-lg btn-primary base-submit-identity">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
