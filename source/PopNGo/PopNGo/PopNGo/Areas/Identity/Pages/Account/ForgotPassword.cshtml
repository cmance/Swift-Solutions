@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}
<div style="text-align: center;">
    <h1 class="text-light">@ViewData["Title"]</h1>
    <h2 class="text-swipe">Enter your email.</h2>
</div>

<hr />
<div class="row text-swipe">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control base-identity-form" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="forgot-password-submit" type="submit" class="w-100 btn btn-lg btn-primary base-submit-identity">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
