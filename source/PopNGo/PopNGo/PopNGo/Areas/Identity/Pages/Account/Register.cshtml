@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}

<h1 class="text-light text-center">Create a <span style="color: #feb85d;">new</span> account.</h1>
<br>
<div class="row">
    <div class="col-md-12 text-swipe">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="All" class="text-danger d-flex justify-content-center align-items-center" role="alert"></div>
            <div class="row justify-content-center">
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.UserName" class="form-control registration-form-identity"
                        autocomplete="username" aria-required="true" placeholder="name" />
                    <label asp-for="Input.UserName">Username</label>
                    @* <span asp-validation-for="Input.UserName" class="text-danger"></span> *@
                </div>
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.FirstName" class="form-control registration-form-identity"
                        autocomplete="firstName" ariarequired="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName">First Name</label>
                    @* <span asp-validation-for="Input.FirstName" class="text-danger"></span> *@
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.LastName" class="form-control registration-form-identity"
                        autocomplete="lastName" ariarequired="true" placeholder="Last Name" />
                    <label asp-for="Input.LastName">Last Name</label>
                    @* <span asp-validation-for="Input.LastName" class="text-danger"></span> *@
                </div>
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.Email" class="form-control registration-form-identity" autocomplete="email"
                        aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.Password" class="form-control registration-form-identity"
                        autocomplete="new-password" aria-required="true" placeholder="password"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{6,}" />
                    <label asp-for="Input.Password">Password</label>
                    @* <span asp-validation-for="Input.Password" class="text-danger"></span> *@
                </div>
                <div class="form-floating mb-3 col-md-auto">
                    <input asp-for="Input.ConfirmPassword" class="form-control registration-form-identity"
                        autocomplete="new-password" aria-required="true" placeholder="password"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{6,}" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> *@
                </div>
            </div>

            <div class="row">
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-center align-items-center">
                        <span class="registration-password-helper-identity">Use 6 or more characters with a mix of
                            letters,
                            numbers and symbols.</span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center register-identity-container">
                <button id="register-submit" type="submit"
                    class="btn btn-lg btn-primary register-submit-identity">Register</button>
            </div>
        </form>
        <br>
    </div>

    <div class="col-md-12">
        <section>

            <div class="row align-items-center" style="color: white;">
                <div class="col">
                    <hr class="text-swipe" style="color: white;" />
                </div>
                <div class="col-auto">
                    <div class="text-swipe text-center" style="color: white;">or</div>
                </div>
                <div class="col">
                    <hr class="text-swipe" style="color: white;" />
                </div>
            </div>

            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a
                                href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                        class="form-horizontal d-flex justify-content-center">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                <div class="input-group pt-3">
                                    <div class="input-group-prepend">
                                        <span id="google-image-prepend-login" class="input-group-text">
                                            <img src="~/media/images/identity/google-color-svgrepo-com.svg" alt="Google Logo"
                                                width="30" height="30">
                                        </span>
                                    </div>
                                    <button type="submit" class="btn btn-primary" name="provider" id="external-register-@{
                                                @provider.Name.ToLower()
 }" value="@provider.Name"
                                        title="Log in using your @provider.DisplayName account">Register with @provider.DisplayName
                                    </button>
                                </div>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
