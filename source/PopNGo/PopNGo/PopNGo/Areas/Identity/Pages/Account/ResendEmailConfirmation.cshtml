@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
@section Styles {
    <link rel="stylesheet" href="~/css/identity.css" />
}

<h1 class="text-light">@ViewData["Title"]</h1>
<h2 class="text-muted">Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4 text-swipe">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                @if(Model.Input.Email != null)
                {
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" value="@Model.Input.Email" />
                } else
                {
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                }
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="resend-email-submit" type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
